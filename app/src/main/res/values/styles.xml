<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Traewelling.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/traewelling</item>
        <item name="postSplashScreenTheme">@style/Theme.Traewelling</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
    </style>
    <style name="Theme.Traewelling.StatisticTexts">
        <item name="android:textColor">@color/traewelling</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Widget.App.ToggleButton.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="TextAppearance.Traewelling.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/traewelling</item>
    </style>
</resources>