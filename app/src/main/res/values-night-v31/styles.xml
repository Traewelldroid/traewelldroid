<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Traewelling.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@android:color/system_accent1_600</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_anim</item>
        <item name="android:windowSplashScreenAnimationDuration">500</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/traewelldroid</item>
        <item name="postSplashScreenTheme">@style/Theme.Traewelling</item>
    </style>
    <style name="Theme.Traewelling.StatisticTexts">
        <item name="android:textColor">@android:color/system_accent1_200</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Theme.Traewelling.PrimaryColorTexts">
        <item name="android:textColor">@android:color/system_accent1_200</item>
    </style>
    <style name="Theme.Traewelling.PrimaryColorIcons">
        <item name="android:tint">@android:color/system_accent1_200</item>
    </style>
    <style name="Theme.Traewelling.PrimaryColorBackground">
        <item name="android:background">@color/traewelling</item>
    </style>
    <style name="Widget.App.ToggleButton.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="TextAppearance.Traewelling.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/system_accent1_200</item>
    </style>
</resources>